<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/usernameEmployCustomerModifyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/usernameModifyTextAdapter"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/emailEmployCustomerModifyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/usernameEmployCustomerModifyText"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="@string/emailAddressModifyCustomerText"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>